<% include ../partials/header.ejs %>
<% include ../partials/mainNav.ejs %>

<!-- Main Navigation -->
<main>
  <div class="row">
  <div class="col-md-offset-3 col-md-5">
  <h1>Welcome to the <%= title %> Page</h1>
  <form class="form" method="post">
      <div class="form-group">
          <label for="NameTextField">Name</label>
          <input type="text" class="form-control"
          id="NametextField"
          placeholder="Enter Student Name"
          name="Name" 
          value="<% study.Name %>"
          required>
      </div>

      <div class="form-group">
          <label for="MajorTextField">Major</label>
          <input type="text" class="form-control"
          id="MajortextField"
          placeholder="Enter Student Major"
          name="Major"
          value="<% study.Major %>"
          required>
      </div>

      <div class="form-group">
          <label for="YearTextField">Current Year</label>
          <input type="text" class="form-control"
          id="YeartextField"
          placeholder="Enter What Year`"
          name="Year" 
          value="<% study.Year %>"
          required>
      </div>

      <div class="form-group">
          <label for="GradTextField">Grad</label>
          <input type="text" class="form-control"
          id="GradtextField"
          placeholder="Expected Graduation Year"
          name="Grad" 
          value="<% study.Grad %>"
          required>
      </div>

      <div class="form-group">
          <label for="CareerTextField">Career Path</label>
          <input type="text" class="form-control"
          id="CareertextField"
          placeholder="Enter Career Path"
          name="Career" 
          value="<% study.Career %>"
          required>
      </div>

      <button class="btn-btn-primary" type="submit">
          <i class="fa-solid fa-pen-nib"></i>Submit
      </button>

      <a href="/study-list" class="btn-btn-warning">
          <i class="fa-solid fa-ban"></i> Cancel</a>

  </form>
      
  </div>
  </div>
</main>
<!-- Bottom Navigation -->
<% include ../partials/bottomNav.ejs %>
<!-- Footer -->
<% include ../partials/footer.ejs %>